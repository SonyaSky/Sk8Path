@model List<AdminPanel.Models.SpotDto>

@{
    ViewData["Title"] = "Места";
}

<h2 class="mb-4">Список мест</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Мест пока нет.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Широта</th>
                <th>Долгота</th>
                <th>Рейтинг</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var road in Model)
        {
            <tr>
                <td>@road.Id</td>
                <td>@road.Latitude</td>
                <td>@road.Longitude</td>
                <td>@road.Rating</td>
                <td>@road.Name</td>
                <td>@road.Description</td>
                <td>
                    <form asp-action="Delete" asp-controller="Spot" method="post" asp-route-id="@road.Id" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                    <form asp-action="Reject" asp-controller="Spot" method="post" asp-route-id="@road.Id" style="display:inline">
                        <button type="submit" class="btn btn-warning btn-sm">Отклонить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
