@model List<AdminPanel.Models.RoadDto>

@{
    ViewData["Title"] = "Дороги";
}

<h2 class="mb-4">Список дорог</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Дорог пока нет.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Рейтинг</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Точки</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var road in Model)
        {
            <tr>
                <td>@road.Id</td>
                <td>@road.Rating</td>
                <td>@road.Name</td>
                <td>@road.Description</td>
                <td>
                    <ul class="list-unstyled">
                        @foreach (var point in road.Points)
                        {
                            <li>
                                <strong>Ш:</strong> @point.Latitude,
                                <strong>Д:</strong> @point.Longitude,
                                <strong>Тип:</strong> @point.Type
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Road" method="post" asp-route-id="@road.Id" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                    <form asp-action="Reject" asp-controller="Road" method="post" asp-route-id="@road.Id" style="display:inline">
                        <button type="submit" class="btn btn-warning btn-sm">Отклонить</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
